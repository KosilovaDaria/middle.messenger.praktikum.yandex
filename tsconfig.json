{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2016",
    "lib": ["es2017","ES2019", "DOM", "DOM.Iterable", "dom.iterable"],
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  }
}